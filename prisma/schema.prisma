generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  price       Float
  author      String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  userBooks   UserBook[]
  orders      Order[]

  @@map("books")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  hash      String
  hashedRt  String?
  role      Role       @default(USER)
  userBooks UserBook[]
  orders    Order[]

  @@map("users")
}

model UserBook {
  id            Int      @id @default(autoincrement())
  userId        Int
  bookId        Int
  purchasedAt   DateTime @default(now())
  purchasePrice Float?
  isFavorite    Boolean  @default(false)
  book          Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("user_books")
}


model Order {
  id              Int        @id @default(autoincrement())
  userId          Int
  bookId          Int
  amount          Float
  currency        String
  status          OrderStatus @default(PENDING) // pending, paid, failed
  paymentIntentId String?    // Stripe's payment intent ID
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  book            Book       @relation(fields: [bookId], references: [id], onDelete: Cascade)
  
  @@map("orders")
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}


enum Role {
  MEMBER
  ADMIN
  USER
}
