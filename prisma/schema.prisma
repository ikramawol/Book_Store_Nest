generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book{
  id Int @id @default(autoincrement())
  title String
  description String
  price Float
  author String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  username String
  role Role @default(USER)
  hash String
  hashedRt String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
 
enum Role{
  MEMBER
  ADMIN
  USER
}
